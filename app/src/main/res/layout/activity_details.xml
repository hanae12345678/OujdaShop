<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nom du livre -->
        <TextView
            android:id="@+id/bookNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom du livre"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

        <!-- Auteur du livre -->
        <TextView
            android:id="@+id/bookAuthorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auteur : Inconnu"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

        <!-- Description du livre -->
        <TextView
            android:id="@+id/bookDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description : Aucune description disponible."
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

        <!-- Prix du livre -->
        <TextView
            android:id="@+id/bookPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prix : 0.00 â‚¬"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    </LinearLayout>
</ScrollView>